{  
    "Sampling": {
        "Distribution": {
            "name": "Gaussian", 
            "n_rand_var" : 1, 
            "hyperparameters" : [[[113000]], [[[122500]]]],
            "init_val" : [113000]
        }, 
        "Algorithm": {
            "name": "Ito-SDE", 
            "Ito-SDE" : {
                "h" : 50, 
                "f0" : 1.4
            },
