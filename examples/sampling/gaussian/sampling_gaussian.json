			    "name": "Gaussian",
			    "covariance": { 
				    "type": "diag", 
				    "value": [7e5]
                }
            }
        },
        "ComputeAnalyticalDistribution": {
            "compute" : "yes"
        }
    }, 
    "PostProcess": { 
	    "MarkovChain": {
		    "display": "yes",
		    "thinning": 1
        },
        "Posterior": {
            "display": "yes", 
            "distribution": "marginal", // marginal, bivariate
            "estimation": "ksdensity+hist", // ksdensity, hist, ksdensity+hist, contour (only for bivariate)
            "burnin" : 0
		}
	}
