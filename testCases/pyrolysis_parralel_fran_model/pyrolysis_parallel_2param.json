{
    "Data": 
    [
        {
            "Type": "ReadFromFile", // ReadFromFile, GenerateSynthetic
            "FileName": "fakePyroData.csv",
            "xField": ["temperature"], 
            "yField": ["dRho"], 
            "sigmaField": ["std_dRho"]
        }
    ],
    "Model": 
	[
        {
	        "model_name": "parallel_pyrolysis", 
	        "input_file": "reaction_scheme_2param.json", 
	        "param_names": ["tau"],
	        "param_values": [6.1],
	        "parametrization" : "no"
	    }
    ],

    "Inference": {
        "inferenceProblem" : "ParallelPyrolysis",  
	    "method": "Bayesian", 
	    "param" : {
		    "A1": {"initial_val" : 16634,    "prior_name" : "Uniform", "prior_param" : [0, 1e10]}, 
		    "E1": {"initial_val" : 113000,    "prior_name" : "Uniform", "prior_param" : [0, 1e10]}
			
		},
	    "likelihood": {
		    "function": "Gaussian",
		    "distance": "L2"
		},
	    "algorithm": {
		    "name": "Ito-SDE", 
		    "n_iterations": 1e3,
		    "proposal": { 
			    "name": "Gaussian",
			    "covariance": { 
				    "type": "diag", 
				    "value": [1e4, 1e5]
				}
			}
		}
	}, 
	
    "PostProcess": { 
	    "Data": { 
		    "display": "yes",
		    "num_plot": 1
		},
	    "InitialGuess": {
		    "display": "yes",
		    "num_plot": 1
		},
	    "MarkovChain": {
		    "display": "yes",
		    "thinning": 1
		},
	    "Posterior": {
		    "display": "yes",
		    "shaded_area": "yes",
		    "burnin": 0,
		    "num_plot": 1
		}
